html 
    head 
        title 
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3', crossorigin='anonymous')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p", crossorigin="anonymous")
        link(href='stylesheet.css' rel="stylesheet")
    body
        .container-xl 
            .row 
                nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
                    .container-fluid
                        a.navbar-brand(href="/") Clubhouse 
                        .collapse.navbar-collapse.justify-content-md-center 
                            ul.navbar-nav
                                if user
                                    if user.ismember 
                                        if !user.admin
                                            li.nav-item 
                                                a.nav-link(href="#") Become Admin
                                        li.nav-item 
                                            a.nav-link(href="#") Create Message  
                                    else 
                                        li.nav-item 
                                            a.nav-link(href="#") Join Clubhouse
                                    li.nav-item 
                                        a.nav-link(href="/log-out") Logout
                                else   
                                    li.nav-item 
                                        a.nav-link(href="/sign-up") Sign Up 
                                    li.nav-item 
                                        a.nav-link(href="/log-in") Sign in 
        block content