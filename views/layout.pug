        link(href='stylesheet.css' rel="stylesheet")
    body
        .container-xl 
            .row 
                nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
                    .container-fluid
                        a.navbar-brand(href="/") Clubhouse 
                        .collapse.navbar-collapse.justify-content-md-center 
                            ul.navbar-nav
                                if user
                                    if user.ismember 
                                        if !user.admin
                                            li.nav-item 
                                                a.nav-link(href="/become-admin") Become Admin
                                        else 
                                            li.nav-item 
                                                a.nav-link(href="/remove-admin") Remove Admin
                                        li.nav-item 
                                            a.nav-link(href="/create-message") Create Message 
                                        li.nav-item 
                                            a.nav-link(href="/leave-club") Leave Club 
                                    else 
                                        li.nav-item 
                                            a.nav-link(href="/join-club") Join Clubhouse
                                    li.nav-item 
                                        a.nav-link(href="/log-out") Logout
                                else   
                                    li.nav-item 
                                        a.nav-link(href="/sign-up") Sign Up 
                                    li.nav-item 
                                        a.nav-link(href="/log-in") Sign in 
        block content