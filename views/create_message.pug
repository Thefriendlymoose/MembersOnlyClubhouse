extends layout

block content
    .text-center
        main.form-signin 
            form(action="/create-message" method="POST")
                h1.h3.mb-3.fw-normal Please create message below 
                .form-floating 
                    input.form-control#title(type="text", placeholder="Title", name="title")
                    label(for="title") Title 
                .form-floating 
                    input.form-control#body(type="text", placeholder="Body", name="body")
                    label(for="body") Body 
                button.w-100.btn.btn-lg.btn-primary.mt-3(type="submit") Send Message
        if message 
            p #{message}