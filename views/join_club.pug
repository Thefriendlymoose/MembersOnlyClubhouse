extends layout

block content
    .text-center
        main.form-join-club
            form(action="/join-club" method="POST")
                h1.h3.mb-3.fw-normal Please enter club passcode
                .form-floating 
                    input.form-control#passcode(type="password", placeholder="Passcode", name="passcode")
                    label(for="passcode") Passcode  
                button.w-100.btn.btn-lg.btn-primary.mt-3(type="submit") Submit Passcode
        if message 
            p #{message}