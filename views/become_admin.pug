extends layout

block content
    .text-center
        main.form-join-club
            form(action="/become-admin" method="POST")
                h1.h3.mb-3.fw-normal Please enter admin password
                .form-floating 
                    input.form-control#password(type="password", placeholder="Password", name="password")
                    label(for="password") Password  
                button.w-100.btn.btn-lg.btn-primary.mt-3(type="submit") Submit Password
        if message 
            p #{message}